#include <stdio.h>
#include <stdlib.h>
#include <string.h>

char str0[]="剪刀",str1[]="石头",str2[]="布",str3[]="否",str4[]="是";		
 
int count=0;		
struct  player
{
	char name[10]; 
	int win;			 
	int lose;			 
	double rate;		 
};

struct player g,gamer[100];			
int over()				 
{
	char o[10];
	int ov;
	while(1){
		scanf("%s",o);
		if(strcmp(o,str3)==0)
		{
			ov=0;
			break;
		}
		else if(strcmp(o,str4)==0){
			ov=1;
			break;
		}
		else printf("输入错误，请重新输入！\n");
	}
	return ov;
}


int judge(char quan[10])	
{
	int score,q,com;
	if(strcmp(quan,str0)==0)q=0;	
	else if(strcmp(quan,str1)==0)q=1;
	else if(strcmp(quan,str2)==0)q=2;
	
	com=rand()%2;

	switch(q){
	case 0:
		printf("你出的拳是：剪刀");
		if(com==0)score=0;
		else if(com==1)score=2;
		else score=1;
		break;
	case 1:
		printf("你出的拳是：石头");
		if(com==0)score=1;
		else if(com==1)score=0;
		else score=2;
		break;
	case 2:		
		printf("你出的拳是：布");
		if(com==0)score=2;
		else if(com==1)score=1;
		else score=0;
		break;
	default:break;
	}
	return score;
}

void game1()		 
{
	int man=0,com=0,score;				
	char quan1[10];
	while(1){
		printf("\n请输入你要出的拳(剪刀/石头/布)：");    
		scanf("%s",quan1);
		if((strcmp(quan1,str0)==0||strcmp(quan1,str1)==0||strcmp(quan1,str2)==0)!=1){
			printf("输入错误！请重新输入。\n");
			continue;
		}
		score=judge(quan1);
		if(score==1){
			printf("\n你赢了！\n");
			man++;
		}else if(score==2){
			printf("\n你输了！\n");
			com++;
		}else printf("\n平局！\n");
		printf("\n");
		if(man==2||com==2){
			if(man==2){
				printf("你赢了电脑！\n");
			} else {
				printf("电脑赢了你！\n");
			} 
			break;
		}
	}
}

void game2()		
{
	int man=0,com=0,score;					
	char quan1[10];
	while(1){
		printf("\n请输入你要出的拳(剪刀/石头/布)：");   
		scanf("%s",quan1);
		if((strcmp(quan1,str0)==0||strcmp(quan1,str1)==0||strcmp(quan1,str2)==0)!=1){
			printf("输入错误！请重新输入。\n");
			continue;
		}
		score=judge(quan1);
		if(score==1){
			printf("\n你赢了！\n");
			man++;
		}else if(score==2){
			printf("\n你输了！\n");
			com++;
		}else printf("\n平局！\n");
		printf("\n");
		if(man==2||com==2){
			if(man==2){
				printf("你赢了电脑！\n");
			} else {
				printf("电脑赢了你！\n");
			} 
			
			if(man==2)g.win++;
			else g.lose++;
			
			break;
		}
	}
}

void rank()			
{
	if(gamer[0].lose!=0||gamer[0].win!=0)
	{
		for(int i=0;i<count;i++){
			
			gamer[0].rate=1.0*gamer[0].win/(gamer[0].win+gamer[0].lose);
			
			for(int j=i+1;j<=count;j++){
				
				if(gamer[j].lose!=0||gamer[j].win!=0)gamer[j].rate=1.0*gamer[j].win/(gamer[j].win+gamer[j].lose);
				
				if(gamer[i].rate<gamer[j].rate){
					g=gamer[i];
					gamer[i]=gamer[j];
					gamer[j]=g;
				}else if(gamer[i].rate==gamer[j].rate&&gamer[i].win<gamer[j].win){
					g=gamer[i];
					gamer[i]=gamer[j];
					gamer[j]=g;					
				}
			}
		}
	}
	printf("*****************************************************************\n");
	printf("			  排行榜\n\n");
	printf("名次	姓名		胜局		负局		胜率\n");
	for(int k=0;k<count;k++){
		printf("%d%12s%15d%16d%16.2lf\n",k+1,gamer[k].name,gamer[k].win,gamer[k].lose,gamer[k].rate);
	}
	printf("*****************************************************************\n");
}

void help()			 
{
	printf("游戏帮助：\n");
	printf("	1.本游戏为剪刀石头布人机对战游戏。\n");
	printf("	2.游戏中，玩家可出3种拳：剪刀，石头和布。\n");
	printf("	  当玩家和电脑出拳相同时，平局。\n");
	printf("	  当出拳不同时：剪刀赢布；石头赢剪刀；布赢石头。\n");
	printf("	3.玩家可以自由选择游戏模式，练习模式或对战模式。\n");
}

void practise()
{
	game1();
}

void battle()		 
{
	int a=0,o;
	g.lose=0;g.win=0;
	printf("进入比赛模式！\n\n");
	printf("请输入您的ID：");
	scanf("%s",g.name);
	for(int i=0;i<=count;i++){
		if(strcmp(g.name,gamer[i].name)==0){
			g=gamer[i];
		    game2();
			gamer[i]=g;
			a=1;
			break;
		}
	}
	if(a==0){
		game2();
		gamer[count]=g;
		count++; 
	}
	printf("\n要再进行一盘比赛吗？（是/否）");
	o=over();
	if(o==1)battle(); 
}

int select()		 
{
	int select;
	printf("*****************************************************************\n\n");
	printf("			   菜单：\n\n");
	printf("			1--练习模式\n");
	printf("                        2--对战模式\n");
	printf("			3--查看排行榜\n");
	printf("			4--查看帮助\n\n");
	printf("*****************************************************************\n\n");
	printf("请输入你的选择：");

	while(1){
	scanf("%d",&select);
		printf("\n");
		if(select>0&&select<5)break; 
			else{
				printf("输入错误！\n");
			}
	}
	return select;
}

void main ()					 
{	
	int myselect;
	
	while(myselect=select()){
		
		if(myselect==1)practise();
    else if(myselect==2)battle();
		else if(myselect==3)rank();
		else if(myselect==4)help();
	}
	
}
